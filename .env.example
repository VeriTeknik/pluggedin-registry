# Server Configuration
NODE_ENV=development
PORT=3001

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/mcp-registry
MONGODB_DB_NAME=mcp-registry

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=mcp_

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_TTL_SECONDS=3600

# API Keys
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
OPENAI_API_KEY=

# Security
JWT_SECRET=
API_KEY_SALT=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Plugged.in Integration
PLUGGEDIN_API_URL=http://localhost:12005/api
PLUGGEDIN_API_KEY=

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/registry.log